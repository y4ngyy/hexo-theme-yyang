.content-container {
  background: #ddd;
  position: absolute;
  min-height: 100%;
  right: 0;
  left: 300px;
}
.content-container .content {
  margin: 30px;
  background: white;
  padding: 20px;
  border: 1px solid #d8d8d8;
}
.content-container .archives .archive-item {
  width: 90%;
  margin: auto;
}
.content-container .archives .nav-link:hover{
  background: #eaeaea;
}
.content article {
  font-size: 1.5em;
  width: 90%;
  margin: auto;
}
.read-more{
  background: #8cc2fb;
  height: 2em;
  border-radius: 2em;
  padding: 10px;
  color: white;
}
.read-more:hover{
  text-decoration: none;
  color: white;
  background: #5398fb;
}